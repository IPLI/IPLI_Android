<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scal="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="missingPrefix">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical"
        scal:scale_base_width="300"
        scal:scale_base_height="350">

        <TextView
            android:id="@+id/title_text_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품명"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center"
            android:background="@color/PastelGreen"
            android:textColor="@color/White"
            scal:scale_width="300"
            scal:scale_height="40"
            scal:scale_textsize="25">
        </TextView>

        <TextView
            android:id="@+id/item_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            scal:scale_width="300"
            scal:scale_height="250"
            scal:scale_top="50"
            scal:scale_textsize="20">
        </TextView>


        <TextView
            android:id="@+id/popup_exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:clickable="true"
            android:fontFamily="@font/nanumsquareroundb"
            android:background="@drawable/click_effect2"
            android:text="확인"
            scal:scale_width="60"
            scal:scale_height="40"
            scal:scale_top="310"
            scal:scale_textsize="20"
            >
        </TextView>
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>