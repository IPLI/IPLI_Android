<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scal="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="missingPrefix">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        scal:scale_base_width="200"
        scal:scale_base_height="60">

        <TextView
            android:id="@+id/title_text_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad Request!"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center"
            android:background="@color/PastelGreen"
            android:textColor="@color/White"
            scal:scale_width="200"
            scal:scale_height="30"
            scal:scale_textsize="20">
        </TextView>

        <TextView
            android:id="@+id/bad_yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:fontFamily="@font/nanumsquareroundb"
            android:background="@drawable/click_effect2"
            android:text="확인"
            scal:scale_width="200"
            scal:scale_height="30"
            scal:scale_top="30"
            scal:scale_textsize="20">
        </TextView>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>