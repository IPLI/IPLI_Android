<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scal="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="missingPrefix">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        scal:scale_base_width="300"
        scal:scale_base_height="120">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑을 종료하시겠습니까?"
            android:gravity="center"
            android:fontFamily="@font/nanumsquareroundb"
            android:background="@color/PastelGreen"
            android:textColor="@color/White"
            scal:scale_width="300"
            scal:scale_height="30"
            scal:scale_textsize="20">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쇼핑을 종료하면\n장바구니가 초기화됩니다."
            android:gravity="center"
            android:fontFamily="@font/nanumsquareroundb"
            android:textColor="@color/Black"
            android:padding="5dp"
            scal:scale_width="300"
            scal:scale_height="60"
            scal:scale_textsize="20"
            scal:scale_top="30">
        </TextView>

        <TextView
        android:id="@+id/out_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:fontFamily="@font/nanumsquareroundb"
        android:clickable="true"
        android:background="@drawable/click_effect2"
        android:text="확인"
        scal:scale_width="150"
        scal:scale_height="30"
        scal:scale_top="30"
        scal:scale_textsize="20">
        </TextView>

        <TextView
            android:id="@+id/out_no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:gravity="center"
            android:clickable="true"
            android:fontFamily="@font/nanumsquareroundb"
            android:background="@drawable/click_effect2"
            android:text="취소"
            scal:scale_width="150"
            scal:scale_height="30"
            scal:scale_top="30"
            scal:scale_textsize="20">
        </TextView>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>